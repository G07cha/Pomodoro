{
  "name": "pomodoro",
  "private": true,
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "start": "tauri dev",
    "build": "tauri build",
    "start:front": "vite",
    "build:front": "tsc && vite build",
    "preview:front": "vite preview",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.less",
    "lint:rust": "cd src-tauri && cargo clippy",
    "lint": "npm run lint:scripts && npm run lint:styles && npm run lint:rust",
    "format:scripts": "prettier . --write --list-different",
    "format:scripts:check": "prettier . -c",
    "format:styles": "stylelint ./**/*.less --fix",
    "format:styles:check": "stylelint ./**/*.less",
    "format:rust": "cd src-tauri && cargo fmt --all",
    "format:rust:check": "cd src-tauri && cargo fmt --all -- --check",
    "format": "npm run format:rust && npm run format:scripts && npm run format:styles",
    "format:check": "npm run format:rust:check && npm run format:scripts:check && npm run format:styles:check",
    "test:scripts": "vitest --watch=false",
    "test:scripts:coverage": "npm run test:scripts -- --coverage",
    "test:rust": "cd src-tauri && cargo test",
    "test": "npm run test:scripts && npm run test:rust"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.40.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "less": "^4.1.3",
    "postcss-less": "^6.0.0",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.1",
    "stylelint-config-recommended": "^12.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vitest": "^0.31.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.3.0",
    "tauri-plugin-autostart-api": "github:tauri-apps/tauri-plugin-autostart"
  }
}
